/* lesson.wxss */

.wx-list-dot {
  height: 10px;
  width: 10px;
  border-radius: 50%;
  background-color: #cccccc;
  margin: 3px;
}

.wx-list-circle {
  height: 16px;
  width: 16px;
  border-radius: 50%;
  background-color: white;
  border: 2rpx solid #cccccc;
  margin-left: 30rpx;
}

.wx-list-line-bottom {
  margin-left: 30rpx;
  width: 8px;
  height: 10px;
  border-right: 2rpx solid #cccccc;
  position: relative;
  bottom: 0;
}

.wx-list-line-top {
  margin-left: 30rpx;
  width: 8px;
  border-right: 2rpx solid #cccccc;
  position: relative;
  top: 0;
}

.wx-list-line {
  margin-left: 30rpx;
  width: 8px;
  height: 100%;
  border-right: 2rpx solid #cccccc;
  position: relative;
  top: 0;
}

.wx-img-none {
  margin-top: 200rpx;
  width:360rpx;
  height: 360rpx;
}

.wx-lesson-none {
  font-size: 32rpx;
  color: #666666;
}

