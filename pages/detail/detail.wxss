/* detail.wxss */

.page-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-bottom: 40px;
}

.wx-lesson-title {
  font-size: 34rpx;
  font-weight: bold;
  margin: 30rpx 30rpx 20rpx 30rpx;
}

.wx-lesson-time {
  font-size: 24rpx;
  margin: 0 30rpx 20rpx 30rpx;
  color: #666666;
}

.wx-lesson-description {
  font-size: 28rpx;
  margin: 20rpx 30rpx 20rpx 30rpx;
  color: #666666;
}

.wx-title-divider {
  width: 100%;
  height: 2rpx;
  border-bottom: 2rpx dashed #cccccc;
}

.wx-list-header-container {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.wx-list-header-text {
  margin: 20rpx 30rpx 20rpx 30rpx;
  color: #999999;
  font-size: 28rpx;
  flex: 1;
}

.wx-lesson-item-text {
  flex: 1;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #666666;
}

.wx-lesson-item-playing {
  font-size: 30rpx;
  color: #00c06d;
}

.wx-list-video {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 400rpx;
  flex: 1;
}

.wx-scroll-cell {
  flex:1;
  box-sizing: border-box;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  background-color: #fff;
  padding: 20rpx 20rpx;
  white-space: nowrap; /**内容不换行显示，保持scrollview中的图片显示在同一行*/
}

.wx-scroll-item-picture {
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.wx-download-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 0 30rpx;
}